services:
  tgbot:
    build:
      context: .
      dockerfile: src/tgbot/Dockerfile
    env_file:
      - .env
    depends_on:
      - api
    command: python -m src.tgbot.bot
    develop:
      watch:
       - path: src/
         action: sync+restart
         target: src/
    volumes:
      - /data:/app/data

  api:
    build:
      context: .
      dockerfile: src/api/Dockerfile
    env_file:
      - .env
    ports:
      - "8000:8000"
    command: uvicorn src.api.main:app --host 0.0.0.0 --port 8000
